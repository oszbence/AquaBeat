#:kivy 1.0

# Widget definitions

# Labels
<Title@Label>
    size_hint_x: .6

# Buttons
<AquaButton@Button>

<SmallButton@AquaButton>
    size_hint_x: .2

<BackButton@SmallButton>
    text: 'Back'

<VolUpButton@SmallButton>
    text: 'Volume++'

<VolDownButton@SmallButton>
    text: 'Volume--'
    size_hint_y: .5
    size_hint_x: 1

<NextButton@SmallButton>
    text: 'Next'

<PrevButton@SmallButton>
    text: 'Prev'

<OkButton@SmallButton>
    text: 'OK'

<SettingsButton@SmallButton>
    text: 'Settings'

# Others
<HorizontalSpace@Label>
    size_hint_x: .2

<VerticalSpace@Label>
    size_hint_y: .25